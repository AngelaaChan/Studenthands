<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Colorlib Templates">
    <meta name="author" content="Colorlib">
    <meta name="keywords" content="Colorlib Templates">

    <!-- Title Page-->
    <title>Register page</title>

    <!-- Font special for pages-->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i" rel="stylesheet">

    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">

    <!-- Main CSS-->
    <link href="/css/register.css" type="text/css" rel="stylesheet" media="all">
    <link href="/css/bootstrap-datepicker.css" type="text/css" rel="stylesheet" media="all">
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.js"></script>
    <script type="text/javascript">
        $(function(){
            $(".tutorinfo").hide();
            $(".confirmtutor").click(function(){
                $(".tutorinfo").show();
            });
            $(".confirmstudent").click(function(){
                $(".info").val("");
                $(".tutorinfo").hide();
            });
        });
        $("#time").timepicker({
            timeFormat: 'h:mm p',
            interval: 30
        });
        $("#datepicker").datepicker({});
        function getsubject(){
            var subjects = [];
            var temp = document.getElementsByName("subject");
            for (i=0;i<temp.length;i++){
                if(temp[i].checked){
                    subjects.push(temp[i].value);
                }
            }
        };
    </script>
    <script type="text/javascript">
        $(document).ready(function(){
            $(".timepicker").timepicker();
        });
        $(document).read(function(){
            $(".datepicker").datepicker();
        });
    </script>
</head>

<body>
<div class="page-wrapper">
    <div class="wrapper wrapper--w790">
        <div class="card card-5">
            <div class="card-heading">
                <h2 class="title">Registration Form</h2>
            </div>
            <div class="card-body">
                <form action="/newuser" method="POST">
                    <div class="form-row">
                        <div class="name">Username</div>
                        <div class="value">
                            <div class="input-group">
                                <input class="input--style-5" type="text" name="username" required>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="name">Password</div>
                        <div class="value">
                            <div class="input-group">
                                <input class="input--style-5" type="password" name="password" required>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="name">Name</div>
                        <div class="value">
                            <div class="input-group">
                                <input class="input--style-5" type="text" name="name" required>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="name">Email</div>
                        <div class="value">
                            <div class="input-group">
                                <input class="input--style-5" type="email" name="email" required>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="name">University</div>
                        <div class="value">
                            <div class="input-group">
                                <input class="input--style-5" type="text" name="university" required>
                            </div>
                        </div>
                    </div>

                    <div class="form-row">
                        <fieldset class="name"> Subject
                            <table style="width: 100%">
                                <tr>
                                    <td>
                                        <label class="radio-container m-r-45">Mathematics
                                            <input type="checkbox" name="subject" value = "Mathematics">
                                            <span class="checkmark"></span>
                                        </label>
                                    </td>
                                    <td>
                                        <label class="radio-container m-r-45">English
                                            <input type="checkbox" name="subject" value = "English">
                                            <span class="checkmark"></span>
                                        </label>
                                    </td>
                                    <td>
                                        <label class="radio-container m-r-45">Engineering
                                            <input type="checkbox" name="subject" value = "Engineering">
                                            <span class="checkmark"></span>
                                        </label>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <label class="radio-container m-r-45">Biology
                                            <input type="checkbox" name="subject" value = "Biology">
                                            <span class="checkmark"></span>
                                        </label>
                                    </td>
                                    <td>
                                        <label class="radio-container m-r-45">Geology
                                            <input type="checkbox" name="subject" value = "Geology">
                                            <span class="checkmark"></span>
                                        </label>
                                    </td>
                                    <td>
                                        <label class="radio-container m-r-45">IT
                                            <input type="checkbox" name="subject" value = "IT">
                                            <span class="checkmark"></span>
                                        </label>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <label class="radio-container m-r-45">Accounting
                                            <input type="checkbox" name="subject" value = "Accounting">
                                            <span class="checkmark"></span>
                                        </label>
                                    </td>
                                    <td>
                                        <label class="radio-container m-r-45">Economics
                                            <input type="checkbox" name="subject" value = "Economics">
                                            <span class="checkmark"></span>
                                        </label>
                                    </td>
                                    <td>
                                        <label class="radio-container m-r-45">Finance
                                            <input type="checkbox" name="subject" value = "Finance">
                                            <span class="checkmark"></span>
                                        </label>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <label class="radio-container m-r-45">Physics
                                            <input type="checkbox" name="subject" value = "Physics">
                                            <span class="checkmark"></span>
                                        </label>
                                    </td>
                                    <td>
                                        <label class="radio-container m-r-45">Medicine
                                            <input type="checkbox" name="subject" value = "Medicine">
                                            <span class="checkmark"></span>
                                        </label>
                                    </td>
                                </tr>
                            </table>
                        </fieldset>
                    </div>
                    <div class="form-row">
                        <div class="value">
                            <div class="input-group">
                                <div class="name">other subjects:</div>
                                <input class="input--style-5" type="text" name="subject">
                            </div>
                        </div>
                    </div>
                    <br>

                    <div class="form-row">
                        <div class="name">Gender</div>
                        <div class="p-t-10">
                            <label class="radio-container m-r-45">Male
                                <input type="radio" name="gender" value="Male">
                                <span class="checkmark"></span>
                            </label>
                            <label class="radio-container m-r-45">Female
                                <input type="radio" name="gender" value="Female">
                                <span class="checkmark"></span>
                            </label>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="name">Want to be...</div>
                        <div class="p-t-10">
                            <label class="radio-container m-r-45">Student
                                <input class="confirmstudent" type="radio" name="identity" value="student" required>
                                <span class="checkmark"></span>
                            </label>
                            <label class="radio-container">Tutor
                                <input class="confirmtutor" type="radio" name="identity" value="tutor" required>
                                <span class="checkmark"></span>
                            </label>
                        </div>
                    </div>
                    <div class="form-row tutorinfo">
                        <div class="name">Available time:</div>
                        <div class="name">Starts: <input class="text timepicker" name="stime"/></div>
                        <div class="name">Ends: <input class="text timepicker" name="etime"/></div>
                    </div>
                    <div class="form-row tutorinfo">
                        <fieldset class="name">Available days:
                            <table style="width: 100%">
                                <tr>
                                    <td>
                                        <label class="radio-container m-r-45">Monday
                                            <input type="checkbox" name="workingday" value="Monday">
                                            <span class="checkmark"></span>
                                        </label>
                                    </td>
                                    <td>
                                        <label class="radio-container m-r-45">Tuesday
                                            <input type="checkbox" name="workingday" value="Tuesday">
                                            <span class="checkmark"></span>
                                        </label>
                                    </td>
                                    <td>
                                        <label class="radio-container m-r-45">Wednesday
                                            <input type="checkbox" name="workingday" value="Wednesday">
                                            <span class="checkmark"></span>
                                        </label>
                                    </td>

                                </tr>
                                <tr>
                                    <td>
                                        <label class="radio-container m-r-45">Thursday
                                            <input type="checkbox" name="workingday" value="Thursday">
                                            <span class="checkmark"></span>
                                        </label>
                                    </td>
                                    <td>
                                        <label class="radio-container m-r-45">Friday
                                            <input type="checkbox" name="workingday" value="Fridy">
                                            <span class="checkmark"></span>
                                        </label>
                                    </td>
                                    <td>
                                        <label class="radio-container m-r-45">Saturday
                                            <input type="checkbox" name="workingday" value="Saturday">
                                            <span class="checkmark"></span>
                                        </label>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <label class="radio-container m-r-45">Sunday
                                            <input type="checkbox" name="workingday" value="Sunday">
                                            <span class="checkmark"></span>
                                        </label>
                                    </td>
                                </tr>
                            </table>
                        </fieldset>

                    </div>
                    <div class="form-row tutorinfo">
                        <fieldset class="name" style="width: 100%; font-size:150%; font-weight: bold">Experience
                            <hr style="border: 2px solid #555555">
                            <div class="name">
                                Experience name:
                            </div>
                            <div class="value">
                                <div class="input-group">
                                    <input class="input--style-5 info" type="text" name="exptitle">
                                </div>
                            </div>
                        </fieldset>
                    </div>
                    <div class="form-row tutorinfo">
                        <div class="name">
                            Start Date:
                        </div>
                        <input class="text datepicker" type="date" name="sdate">
                        <div class="name">
                            End Date:
                        </div>
                        <input class="text datepicker" type="date" name="edate">
                    </div>
                    <div class="form-row tutorinfo">
                        <div class="name">
                            Experience Description:
                        </div>
                        <div class="input-group">
                            <textarea></textarea>
                        </div>
                    </div>



                    <div class="form-row tutorinfo">
                        <fieldset class="name" style="width: 100%; font-size: 150%; font-weight: bold">Education
                            <hr style="border: 2px solid #555555">
                        <div class="name">
                            University/Education Institution:
                        </div>
                        <div class="value">
                            <div class="input-group">
                                <input class="input--style-5 info" type="text" name="uni_name">
                            </div>
                        </div>
                        </fieldset>
                    </div>
                    <div class="form-row tutorinfo">
                        <div class="name">
                            Start Date:
                        </div>
                        <input class="text datepicker" type="date" name="uni_sdate">
                        <div class="name">
                            End Date:
                        </div>
                        <input class="text datepicker" type="date" name="uni_edate">
                    </div>
                    <div class="form-row tutorinfo">
                        <div class="name">
                            Education Description:
                        </div>
                        <div class="input-group">
                            <textarea></textarea>
                        </div>
                    </div>


                    <div>
                        <button class="btn btn--radius-2 btn--green" type="submit">Register</button>
                        <a href="/"><button class="btn btn--radius-2 btn--red" type="button">Cancel</button></a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


</body>

</html>
