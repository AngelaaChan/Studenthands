<div class="w3-content w3-margin-top" style="max-width:1400px;">

        <!-- The Grid -->
        <div class="w3-row-padding">
    
            <!-- Left Column -->
            <div class="w3-third">
    
                <div class="w3-white w3-text-grey w3-card-4">
                    
                    <div class="w3-container">
                        <h2><%=user.name%></h2>
                        <p><i class="fa fa-envelope fa-fw w3-margin-right w3-large w3-text-green"></i><%=user.email%></p>
                        <p><i class="fa fa-phone fa-fw w3-margin-right w3-large w3-text-green"></i><%=user.phone%></p>
                        <hr>
    
    
                    </div>
                </div>
    
                <!-- End Left Column -->
            </div>
    
            <!-- Right Column -->
            <div class="w3-twothird">
    
                <div class="w3-container w3-card w3-white">
                    <h2 class="w3-text-grey w3-padding-16"><i class="fa fa-certificate fa-fw w3-margin-right w3-xxlarge w3-text-green"></i>Subjects</h2>
                    <div class="w3-container">
                        <h5 class="w3-opacity"><b>User Information</b></h5>
                        <%if (user.identity == "tutor"){%>
                            <h6 class="w3-text-green"><i class="fa fa-calendar fa-fw w3-margin-right"></i>Time Available : from <%=user.start_time%> to <%=user.end_time%>
                        <%}%>
                        </h6>
                        <% for (var i =0; i<user.subject.length; i++) {%>
                            <p><%=user.subject[i]%></p>
                        <%}%>
                        <br>
                    </div>
    
                </div>
                <%if(user.identity == "tutor"){%>
                <div class="w3-container w3-card w3-white w3-margin-bottom">
                    <h2 class="w3-text-grey w3-padding-16"><i class="fa fa-suitcase fa-fw w3-margin-right w3-xxlarge w3-text-green"></i>Work Experience</h2>
    
                    <div class="w3-container">
